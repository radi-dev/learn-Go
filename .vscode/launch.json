    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}"
        },
        {
            "name": "Launch File with Arguments",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "args": [
                "arg1",
                "arg2"
            ]
        },
        {
            "name": "Launch File with Environment Variables",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "env": {
                "MY_ENV_VAR": "value"
            }
        },
        {
            "name": "Launch Package (Current Directory)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirnameBasename}"
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        },
        {
            "name": "Launch Package with Arguments",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "arg1",
                "arg2"
            ]
        },
        {
            "name": "Launch Package with Environment Variables",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {
                "MY_ENV_VAR": "value"
            }
        }
    ]
}